{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://schemata.opws.org/DRAFT/legacies.json#",
  "version": "0.3.0",
  "definitions": {
    "domain": {
      "type": "string",
      "pattern": "^(\\*\\.)*([a-z0-9\\-]+\\.)+[a-z0-9\\-]+$"
    },
    "urlish": {
      "type": "string",
      "pattern": "^https?://(([a-z0-9\\-]+|\\*)\\.)+[a-z0-9\\-]+/"
    }
  },
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "circa"
    ],
    "properties": {
      "circa": {
        "type": "string",
        "format": "date"
      },
      "moved": {
        "type": "object",
        "properties": {
          "to": {
            "$ref": "#/definitions/domain"
          }
        },
        "minimumProperties": 1
      },
      "announcement": {
        "type": "object",
        "properties": {
          "url": {
            "$ref": "#/definitions/urlish"
          }
        },
        "minimumProperties": 1
      }
    }
  }
}
